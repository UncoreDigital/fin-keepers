<!-- MAIN CONTAINER -->
<div class="w-full py-16 px-4 sm:px-6 lg:px-[120px] bg-white mx-auto">
  <div class="flex flex-col items-center gap-6 relative">

    <!-- HEADING -->
    <h2 class="text-2xl sm:text-3xl lg:text-[36px] font-bold text-[#04092A] text-left self-start">
      And what is our Ikigai? What motivates us…
    </h2>

    <!-- DESCRIPTION -->
    <p class="text-sm sm:text-base lg:text-[18px] text-[#5C667A] text-left self-start max-w-[1240px]">
      After researching the market and receiving queries from startups and SMBs, we found a gap in the U.S. market. Hence, aiding these companies with their financial issues became our Ikigai. The expert team of Finkeepers, a child company of Knowcraft Analytics, is assisting small companies that are starting and are trying to be independent.
    </p>

    <!-- TABS -->
    <div class="flex justify-center gap-2 bg-white p-2 rounded-md">
      <button
        id="tab-vision"
        class="tab-button px-6 py-2 rounded-md text-sm font-semibold bg-[#ED7C00] text-white cursor-pointer"
        data-tab="vision"
      >
        Our Vision
      </button>

      <button
        id="tab-mission"
        class="tab-button px-6 py-2 rounded-md text-sm font-semibold text-[#797979] cursor-pointer"
        data-tab="mission"
      >
        Our Mission
      </button>
    </div>

    <!-- CONTENT SECTION -->
    <div class="flex flex-col lg:flex-row w-full max-w-[1200px] gap-8 mt-4">

      <!-- LEFT CARD -->
      <div
        id="text-block"
        class="bg-white border border-[rgba(121,121,121,0.22)] rounded-[16px] p-8 flex-1 flex flex-col gap-6"
      >
        <div class="flex items-center gap-4">
          <div
            id="icon"
            class="w-12 h-12 bg-cover bg-no-repeat"
            style="background-image: url('/img/about/vision.svg')"
          ></div>

          <h3 id="title" class="text-2xl font-semibold text-[#151515]">Our Vision</h3>
        </div>

        <p id="description" class="text-base text-[#5C667A] leading-relaxed">
          At Finkeepers, our motto is to safeguard every startup and SMB’s financial health because having a strong backbone in finance empowers businesses to thrive, scale, and succeed. We aspire to redefine financial consulting in the U.S. by making expert guidance accessible, transparent, and future-ready.
        </p>

        <!-- <a href="/contact" class="text-[#ED7C00] font-semibold text-base">Contact Us</a> -->
      </div>

      <!-- RIGHT IMAGE BOX -->
      <div class="bg-[#f5f7fa] rounded-[16px] p-4 flex-1 flex justify-center items-center">
        <div class="relative group flex items-center justify-center w-full h-full">
          <img
            id="image"
            src="/img/about/m4.png"
            alt="Our Vision"
            class="w-[208px] h-auto transition-opacity duration-300 ease-in-out group-hover:opacity-0"
          />
          <img
            id="hover-image"
            src="/img/about/m3.png"
            alt="Our Vision Hover"
            class="absolute inset-0 m-auto w-[208px] h-auto opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100"
          />
        </div>
      </div>

    </div>
  </div>
</div>

<script type="module">
  import gsap from "https://cdn.skypack.dev/gsap";

  const data = {
    vision: {
      title: "Our Vision",
      description:
        "At Finkeepers, our motto is to safeguard every Start-up and SME’s financial health because having a strong backbone in finance empowers businesses to thrive, scale, and succeed. We aspire to redefine financial consulting in the U.S. by making expert guidance accessible, transparent, and future-ready.",
      icon: "/img/about/vision.svg",
      image: "/img/about/m4.png",
      hoverImage: "/img/about/m3.png",
    },
    mission: {
      title: "Our Mission",
      description:
        "The mission of Finkeepers is to simplify and strengthen the finances of small businesses and startups in the U.S. Our services are curated to the financial needs of a small business, such as bookkeeping, tax management, payroll assistance, temporary CFO services, financial reporting and modelling, and much more.",
      icon: "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2025-08-02/pjiTWgYf5p.png",
      image: "/img/about/m2.png",
      hoverImage: "/img/about/m1.png",
    },
  };

  const buttons = document.querySelectorAll(".tab-button");
  const title = document.getElementById("title");
  const description = document.getElementById("description");
  const icon = document.getElementById("icon");
  const image = document.getElementById("image");
  const hoverImage = document.getElementById("hover-image");

  buttons.forEach((btn) => {
    btn.addEventListener("click", () => {
      const tab = btn.dataset.tab;

      buttons.forEach((b) => {
        b.classList.remove("bg-[#ED7C00]", "text-white");
        b.classList.add("text-[#797979]");
      });

      btn.classList.add("bg-[#ED7C00]", "text-white");
      btn.classList.remove("text-[#797979]");

      const t = data[tab];

      gsap.to([title, description, icon], {
        opacity: 0,
        duration: 0.3,
        onComplete: () => {
          title.textContent = t.title;
          description.textContent = t.description;
          icon.style.backgroundImage = `url(${t.icon})`;
          image.src = t.image;
          hoverImage.src = t.hoverImage;

          gsap.to([title, description, icon], {
            opacity: 1,
            duration: 0.4,
          });
        },
      });
    });
  });
</script>
