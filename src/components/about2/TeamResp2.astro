    });

    const cardsPerPage = 4;
    let currentPage = 1;

    const teamCardsContainer = document.getElementById("team-cards-container");
    const paginationNumbersContainer =
      document.getElementById("pagination-numbers");
    const prevPageButton = document.getElementById("prev-page");
    const nextPageButton = document.getElementById("next-page");

    function renderTeamCards() {
      teamCardsContainer.innerHTML = ""; // Clear existing cards

      const startIndex = (currentPage - 1) * cardsPerPage;
      const endIndex = startIndex + cardsPerPage;
      const membersToDisplay = allTeamMembers.slice(startIndex, endIndex);

      membersToDisplay.forEach((member) => {
        const card = document.createElement("div");
        card.className = "w-[288px] h-[389px] shrink-0 relative flex-grow-0";
        card.innerHTML = `
          <div class="w-[240px] h-[35px] relative overflow-hidden z-[11] mt-[330px] mr-0 mb-0 ml-[24px]">
            <div class="w-full h-full bg-[rgba(40,36,31,0.7)] rounded-[17.289px] absolute top-0 left-[0%] z-[12]"></div>
            <span class="flex h-[15px] justify-start items-start font-['Inter'] text-[12px] font-medium leading-[14.523px] text-[#fff] absolute top-[calc(50%-7.5px)] left-[5%] text-left capitalize whitespace-nowrap z-[13]">
              ${member.position}
            </span>
          </div>
          <div class="w-[288px] h-[389px] bg-[url(${member.imageUrl})] bg-cover bg-no-repeat rounded-[16px] absolute top-0 left-0 z-[9]"></div>
          <span class="flex h-[24px] justify-start items-start font-['Inter'] text-[18px] font-semibold leading-[24px] text-[#fff] absolute top-[294px] left-[24px] text-left whitespace-nowrap z-10">
            ${member.name}
          </span>
          <div class="w-[24px] h-[24px] bg-[url(${member.socialIcon})] bg-cover bg-no-repeat absolute top-[294px] left-[240px] overflow-hidden z-[14]"></div>
        `;
        teamCardsContainer.appendChild(card);
      });
    }

    function renderPaginationNumbers() {
      paginationNumbersContainer.innerHTML = ""; // Clear existing numbers

      const totalPages = Math.ceil(allTeamMembers.length / cardsPerPage);

      for (let i = 1; i <= totalPages; i++) {
        const pageNumberDiv = document.createElement("div");
        pageNumberDiv.className = `flex w-[36.571px] h-[36.571px] pt-0 pr-[7.5px] pb-0 pl-[7.5px] flex-col gap-[12.5px] justify-center items-center shrink-0 flex-nowrap rounded-[6.857px] cursor-pointer relative ${
          i === currentPage ? "bg-[#ed7c00] rounded-[36.86px]" : ""
        }`;

        const pageSpan = document.createElement("span");
        pageSpan.className = `h-[28px] self-stretch shrink-0 basis-auto font-['Inter'] text-[16px] font-normal leading-[28px] relative text-center whitespace-nowrap ${
          i === currentPage ? "text-[#fff]" : "text-[#151515]"
        }`;
        pageSpan.textContent = i;

        pageNumberDiv.appendChild(pageSpan);
        pageNumberDiv.addEventListener("click", () => {
          currentPage = i;
          renderTeamCards();
          renderPaginationNumbers(); // Re-render to update active style
        });

        paginationNumbersContainer.appendChild(pageNumberDiv);
      }

      // Disable/enable navigation buttons
      prevPageButton.style.opacity = currentPage === 1 ? "0.5" : "1";
      prevPageButton.style.pointerEvents = currentPage === 1 ? "none" : "auto";
      nextPageButton.style.opacity = currentPage === totalPages ? "0.5" : "1";
      nextPageButton.style.pointerEvents =
        currentPage === totalPages ? "none" : "auto";
    }

    prevPageButton.addEventListener("click", () => {
      if (currentPage > 1) {
        currentPage--;
        renderTeamCards();
        renderPaginationNumbers();
      }
    });

    nextPageButton.addEventListener("click", () => {
      const totalPages = Math.ceil(allTeamMembers.length / cardsPerPage);
      if (currentPage < totalPages) {
        currentPage++;
        renderTeamCards();
        renderPaginationNumbers();
      }
    });

    // Initial render
    renderTeamCards();
    renderPaginationNumbers();
  });
</script>
