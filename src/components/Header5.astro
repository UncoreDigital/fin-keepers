    const mobileResourcesMenu = document.getElementById(
      "mobile-resources-menu",
    );

    if (toggle && menu) {
      toggle.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    }

    if (header) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
          header.classList.add("bg-[#093634]");
        } else {
          header.classList.remove("bg-[#093634]");
        }
      });
    }

    const closeAllDropdowns = () => {
      if (resourcesMenu) resourcesMenu.classList.add("hidden");
      if (serviceMenu) serviceMenu.classList.add("hidden");
    };

    // Desktop hover functionality for Services dropdown
    if (servicesToggle && serviceMenu) {
      const servicesContainer = servicesToggle.parentElement;
      let servicesTimeout;
      
      const showServicesMenu = () => {
        clearTimeout(servicesTimeout);
        if (resourcesMenu) resourcesMenu.classList.add("hidden");
        serviceMenu.classList.remove("hidden");
      };
      
      const hideServicesMenu = () => {
        servicesTimeout = setTimeout(() => {
          serviceMenu.classList.add("hidden");
        }, 100); // 100ms delay
      };
      
      servicesContainer.addEventListener("mouseenter", showServicesMenu);
      servicesContainer.addEventListener("mouseleave", hideServicesMenu);
      
      // Keep menu visible when hovering over the dropdown itself
      serviceMenu.addEventListener("mouseenter", () => {
        clearTimeout(servicesTimeout);
      });
      serviceMenu.addEventListener("mouseleave", hideServicesMenu);
    }

    // Desktop hover functionality for Resources dropdown
    if (resourcesToggle && resourcesMenu) {
      const resourcesContainer = resourcesToggle.parentElement;
      let resourcesTimeout;
      
      const showResourcesMenu = () => {
        clearTimeout(resourcesTimeout);
        if (serviceMenu) serviceMenu.classList.add("hidden");
        resourcesMenu.classList.remove("hidden");
      };
      
      const hideResourcesMenu = () => {
        resourcesTimeout = setTimeout(() => {
          resourcesMenu.classList.add("hidden");
        }, 100); // 100ms delay
      };
      
      resourcesContainer.addEventListener("mouseenter", showResourcesMenu);
      resourcesContainer.addEventListener("mouseleave", hideResourcesMenu);
      
      // Keep menu visible when hovering over the dropdown itself
      resourcesMenu.addEventListener("mouseenter", () => {
        clearTimeout(resourcesTimeout);
      });
      resourcesMenu.addEventListener("mouseleave", hideResourcesMenu);
    }

    // Close dropdowns when clicking elsewhere (fallback)
    document.addEventListener("click", (e) => {
      const target = e.target;
      if (
        target &&
        resourcesMenu &&
        serviceMenu &&
        !resourcesMenu.contains(target) &&
        !serviceMenu.contains(target) &&
        !resourcesToggle?.contains(target) &&
        !servicesToggle?.contains(target)
      ) {
        closeAllDropdowns();
      }
    });

    if (mobileServicesToggle && mobileServicesMenu) {
      mobileServicesToggle.addEventListener("click", () => {
        if (
          mobileResourcesMenu &&
          !mobileResourcesMenu.classList.contains("hidden")
        ) {
          mobileResourcesMenu.classList.add("hidden");
        }
        mobileServicesMenu.classList.toggle("hidden");
      });
    }

    if (mobileResourcesToggle && mobileResourcesMenu) {
      mobileResourcesToggle.addEventListener("click", () => {
        if (
          mobileServicesMenu &&
          !mobileServicesMenu.classList.contains("hidden")
        ) {
          mobileServicesMenu.classList.add("hidden");
        }
        mobileResourcesMenu.classList.toggle("hidden");
      });
    }

    // Header scroll functionality - reduce height by 20px when scrolling
    let lastScrollTop = 0;
