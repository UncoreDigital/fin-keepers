<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const thankYouMessage = document.getElementById('thank-you-message');
    const submitButton = form.querySelector('button[type="submit"]');
    
    if (form && thankYouMessage && submitButton) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get form inputs
        const fullName = form.querySelector('#fullname').value.trim();
        const email = form.querySelector('#email').value.trim();
        const message = form.querySelector('#message').value.trim();
        
        // Basic validation
        if (!fullName || !email || !message) {
          alert('Please fill in all fields.');
          return;
        }
        
        // Show loading state
        const originalText = submitButton.textContent;
        submitButton.textContent = 'Submitting...';
        submitButton.disabled = true;
        
        // Simulate form submission (replace with actual form submission logic)
        setTimeout(() => {
          // Hide form inputs
          const formInputs = form.querySelectorAll('input, textarea, button');
          formInputs.forEach(input => {
            if (input !== submitButton) {
              input.style.display = 'none';
            }
          });
          
          // Hide the title and description
          const formHeader = form.querySelector('.flex.flex-col.gap-3');
          if (formHeader) {
            formHeader.style.display = 'none';
          }
          
          // Hide the input container
          const inputContainer = form.querySelector('.flex.flex-col.gap-4');
          if (inputContainer) {
            inputContainer.style.display = 'none';
          }
          
          // Hide submit button
          submitButton.style.display = 'none';
          
          // Show thank you message
          thankYouMessage.classList.remove('hidden');
          thankYouMessage.classList.add('flex');
          
          // Reset form after 5 seconds (optional)
          setTimeout(() => {
            // Reset form
            form.reset();
            
            // Show form elements again
            formInputs.forEach(input => {
              input.style.display = '';
            });
            
            if (formHeader) {
              formHeader.style.display = '';
            }
            
            if (inputContainer) {
              inputContainer.style.display = '';
            }
            
            submitButton.style.display = '';
            submitButton.textContent = originalText;
            submitButton.disabled = false;
            
            // Hide thank you message
            thankYouMessage.classList.add('hidden');
            thankYouMessage.classList.remove('flex');
          }, 5000);
          
        }, 1000); // Simulate 1 second processing time
      });
    }
  });
</script>
