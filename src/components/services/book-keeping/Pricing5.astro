  // Pricing data for different billing cycles
  const pricingData = {
    basic: {
      monthly: { price: "$250", period: "/month" },
      yearly: { price: "$2550", period: "/year" }, // 15% discount: 250 * 12 * 0.85
    },
    standard: {
      monthly: { price: "$12", period: "/month" },
      yearly: { price: "$122", period: "/year" }, // 15% discount: 12 * 12 * 0.85
    },
    premium: {
      monthly: { price: "500", period: "/month" },
      yearly: { price: "5100", period: "/year" }, // 15% discount: 500 * 12 * 0.85
    },
  };

  // Get DOM elements
  const billingToggle = document.getElementById("billingToggle");
  const monthlyLabel = document.getElementById("monthlyLabel");
  const yearlyLabel = document.getElementById("yearlyLabel");

  // Desktop elements
  const basicPrice = document.getElementById("basic-price");
  const basicPeriod = document.getElementById("basic-period");
  const standardPrice = document.getElementById("standard-price");
  const standardPeriod = document.getElementById("standard-period");
  const premiumPrice = document.getElementById("premium-price");
  const premiumPeriod = document.getElementById("premium-period");

  // Mobile elements
  const basicPriceMobile = document.getElementById("basic-price-mobile");
  const basicPeriodMobile = document.getElementById("basic-period-mobile");
  const standardPriceMobile = document.getElementById("standard-price-mobile");
  const standardPeriodMobile = document.getElementById(
    "standard-period-mobile"
  );
  const premiumPriceMobile = document.getElementById("premium-price-mobile");
  const premiumPeriodMobile = document.getElementById("premium-period-mobile");

  // Function to update pricing display
  function updatePricing(isYearly: boolean) {
    const billingType = isYearly ? "yearly" : "monthly";

    // Update label colors
    if (monthlyLabel && yearlyLabel) {
      if (isYearly) {
        monthlyLabel.classList.remove("text-[#ed7c00]");
        monthlyLabel.classList.add("text-black/50");
        yearlyLabel.classList.remove("text-black/50");
        yearlyLabel.classList.add("text-[#ed7c00]");
      } else {
        monthlyLabel.classList.remove("text-black/50");
        monthlyLabel.classList.add("text-[#ed7c00]");
        yearlyLabel.classList.remove("text-[#ed7c00]");
        yearlyLabel.classList.add("text-black/50");
      }
    }

    // Update desktop prices
    if (basicPrice && basicPeriod) {
      basicPrice.textContent = pricingData.basic[billingType].price;
      basicPeriod.textContent = pricingData.basic[billingType].period;
    }

    if (standardPrice && standardPeriod) {
      standardPrice.textContent = pricingData.standard[billingType].price;
      standardPeriod.textContent = pricingData.standard[billingType].period;
    }

    if (premiumPrice && premiumPeriod) {
      premiumPrice.textContent = pricingData.premium[billingType].price;
      premiumPeriod.textContent = pricingData.premium[billingType].period;
    }

    // Update mobile prices
    if (basicPriceMobile && basicPeriodMobile) {
      basicPriceMobile.textContent = pricingData.basic[billingType].price;
      basicPeriodMobile.textContent = pricingData.basic[billingType].period;
    }

    if (standardPriceMobile && standardPeriodMobile) {
      standardPriceMobile.textContent = pricingData.standard[billingType].price;
      standardPeriodMobile.textContent =
        pricingData.standard[billingType].period;
    }

    if (premiumPriceMobile && premiumPeriodMobile) {
      premiumPriceMobile.textContent = pricingData.premium[billingType].price;
      premiumPeriodMobile.textContent = pricingData.premium[billingType].period;
    }
  }

  // Add event listener to toggle
  if (billingToggle) {
    billingToggle.addEventListener("change", (e) => {
      const target = e.target as HTMLInputElement | null;
      if (target) {
        updatePricing(target.checked);
      }
    });
  }

  // Initialize with monthly pricing (toggle unchecked by default)
  document.addEventListener("DOMContentLoaded", () => {
    updatePricing(false);
  });
</script>
