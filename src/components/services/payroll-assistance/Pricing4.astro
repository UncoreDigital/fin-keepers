<script>
  interface PricingData {
    basic: {
      monthly: { price: string; period: string };
      yearly: { price: string; period: string };
    };
    standard: {
      monthly: { price: string; period: string };
      yearly: { price: string; period: string };
    };
    premium: {
      monthly: { price: string; period: string };
      yearly: { price: string; period: string };
    };
  }

  // Pricing data for different billing cycles
    const pricingData: PricingData = {
    basic: {
      monthly: { price: "999", period: "/month" },
      yearly: { price: "999", period: "/month" }, // 15% discount: 250 * 12 * 0.85
    },
    standard: {
      monthly: { price: "1999", period: "/month" },
      yearly: { price: "1999", period: "/month" }, // 15% discount: 12 * 12 * 0.85
    },
    premium: {
      monthly: { price: "Custom", period: "" },
      yearly: { price: "Custom", period: "" }, // 15% discount: 500 * 12 * 0.85
    },
  };

  // Get DOM elements
  const billingToggle = document.getElementById(
    "billingToggle"
  ) as HTMLInputElement | null;
  const monthlyLabel = document.getElementById(
    "monthlyLabel"
  ) as HTMLElement | null;
  const yearlyLabel = document.getElementById(
    "yearlyLabel"
  ) as HTMLElement | null;

  // Desktop elements
  const basicPrice = document.getElementById(
    "basic-price"
  ) as HTMLElement | null;
  const basicPeriod = document.getElementById(
    "basic-period"
  ) as HTMLElement | null;
  const standardPrice = document.getElementById(
    "standard-price"
  ) as HTMLElement | null;
  const standardPeriod = document.getElementById(
    "standard-period"
  ) as HTMLElement | null;
  const premiumPrice = document.getElementById(
    "premium-price"
  ) as HTMLElement | null;
  const premiumPeriod = document.getElementById(
    "premium-period"
  ) as HTMLElement | null;

  // Mobile elements
  const basicPriceMobile = document.getElementById(
    "basic-price-mobile"
  ) as HTMLElement | null;
  const basicPeriodMobile = document.getElementById(
    "basic-period-mobile"
  ) as HTMLElement | null;
  const standardPriceMobile = document.getElementById(
    "standard-price-mobile"
  ) as HTMLElement | null;
  const standardPeriodMobile = document.getElementById(
    "standard-period-mobile"
  ) as HTMLElement | null;
  const premiumPriceMobile = document.getElementById(
    "premium-price-mobile"
  ) as HTMLElement | null;
  const premiumPeriodMobile = document.getElementById(
    "premium-period-mobile"
  ) as HTMLElement | null;

  // Function to update pricing display
  function updatePricing(isYearly: boolean): void {
    const billingType = isYearly ? "yearly" : "monthly";

    // Update label colors
    if (monthlyLabel && yearlyLabel) {
      if (isYearly) {
        monthlyLabel.classList.remove("text-[#ed7c00]");
        monthlyLabel.classList.add("text-black/50");
        yearlyLabel.classList.remove("text-black/50");
        yearlyLabel.classList.add("text-[#ed7c00]");
      } else {
        monthlyLabel.classList.remove("text-black/50");
        monthlyLabel.classList.add("text-[#ed7c00]");
        yearlyLabel.classList.remove("text-[#ed7c00]");
        yearlyLabel.classList.add("text-black/50");
      }
    }

    // Update desktop prices
    if (basicPrice && basicPeriod) {
      basicPrice.textContent = pricingData.basic[billingType].price;
      basicPeriod.textContent = pricingData.basic[billingType].period;
    }

    if (standardPrice && standardPeriod) {
      standardPrice.textContent = pricingData.standard[billingType].price;
      standardPeriod.textContent = pricingData.standard[billingType].period;
    }

    if (premiumPrice && premiumPeriod) {
      premiumPrice.textContent = pricingData.premium[billingType].price;
      premiumPeriod.textContent = pricingData.premium[billingType].period;
    }

    // Update mobile prices
    if (basicPriceMobile && basicPeriodMobile) {
      basicPriceMobile.textContent = pricingData.basic[billingType].price;
      basicPeriodMobile.textContent = pricingData.basic[billingType].period;
    }

    if (standardPriceMobile && standardPeriodMobile) {
      standardPriceMobile.textContent = pricingData.standard[billingType].price;
      standardPeriodMobile.textContent =
        pricingData.standard[billingType].period;
    }

    if (premiumPriceMobile && premiumPeriodMobile) {
      premiumPriceMobile.textContent = pricingData.premium[billingType].price;
      premiumPeriodMobile.textContent = pricingData.premium[billingType].period;
    }
  }

  // Add event listener to toggle
  if (billingToggle) {
    billingToggle.addEventListener("change", (e: Event) => {
      const target = e.target as HTMLInputElement;
      updatePricing(target.checked);
    });
  }

  // Initialize with monthly pricing (toggle unchecked by default)
  document.addEventListener("DOMContentLoaded", () => {
    updatePricing(false);
  });
</script>

