<div
  id="cookie-banner"
  class="fixed bottom-4 right-4 z-50 max-w-sm w-[calc(100%-2rem)] bg-white/95 backdrop-blur-md border border-[#007164]/10 rounded-2xl shadow-[0_8px_30px_rgb(0,0,0,0.12)] p-6 translate-y-[150%] opacity-0 transition-all duration-500 ease-out hidden"
>
  <div class="flex items-start gap-4">
    <div
      class="flex-shrink-0 w-10 h-10 bg-[#007164]/10 rounded-full flex items-center justify-center text-[#007164]"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path>
        <path d="M8.5 8.5v.01"></path>
        <path d="M16 15.5v.01"></path>
        <path d="M12 12v.01"></path>
        <path d="M11 17v.01"></path>
        <path d="M7 14v.01"></path>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900 mb-2 font-['Inter']">
        We value your privacy
      </h3>
      <p class="text-sm text-gray-600 mb-4 leading-relaxed font-['Inter']">
        We use cookies to enhance your browsing experience, serve personalized
        ads or content, and analyze our traffic. By clicking "Accept All", you
        consent to our use of cookies.
        <a href="/privacy-policy" class="text-[#007164] hover:underline"
          >Read Policy</a
        >.
      </p>
      <div class="flex flex-wrap gap-3">
        <button
          id="accept-cookies"
          class="bg-[#ed7c00] hover:bg-[#d96b00] text-white px-5 py-2 rounded-full text-sm font-medium transition-all shadow-md hover:shadow-lg transform active:scale-95 font-['Inter']"
        >
          Accept All
        </button>
        <button
          id="reject-cookies"
          class="px-5 py-2 rounded-full text-sm font-medium text-gray-600 hover:bg-gray-100 transition-colors font-['Inter']"
        >
          Reject
        </button>
      </div>
    </div>
    <button
      id="close-banner"
      class="text-gray-400 hover:text-gray-600 transition-colors"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const banner = document.getElementById("cookie-banner");
    const acceptBtn = document.getElementById("accept-cookies");
    const rejectBtn = document.getElementById("reject-cookies");
    const closeBtn = document.getElementById("close-banner");

    if (!banner) return;

    // Check if user has already made a choice
    const consent = localStorage.getItem("cookie_consent");

    if (!consent) {
      // Show banner after a small delay
      setTimeout(() => {
        banner.classList.remove("hidden");
        // Trigger reflow to ensure transition happens
        void banner.offsetWidth;
        banner.classList.remove("translate-y-[150%]", "opacity-0");
        banner.classList.add("translate-y-0", "opacity-100");
      }, 1000);
    }

    const hideBanner = () => {
      banner.classList.remove("translate-y-0", "opacity-100");
      banner.classList.add("translate-y-[150%]", "opacity-0");

      // Wait for transition to finish before hiding display
      setTimeout(() => {
        banner.classList.add("hidden");
      }, 500);
    };

    acceptBtn?.addEventListener("click", () => {
      localStorage.setItem("cookie_consent", "accepted");
      hideBanner();
    });

    rejectBtn?.addEventListener("click", () => {
      localStorage.setItem("cookie_consent", "rejected");
      hideBanner();
    });

    closeBtn?.addEventListener("click", () => {
      localStorage.setItem("cookie_consent", "dismissed");
      hideBanner();
    });
  });
</script>
