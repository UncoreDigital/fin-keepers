<script>
  import { gsap } from "gsap";
  import { TextPlugin } from "gsap/TextPlugin";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(TextPlugin, ScrollTrigger);

  window.addEventListener("DOMContentLoaded", () => {
    const headingEl = document.querySelector(".why-heading");
    const paraEl = document.querySelector(".why-para");

    if (!paraEl) return;

    // Simple fade-in animation for mobile compatibility
    gsap.fromTo(paraEl, 
      {
        opacity: 0,
        y: 30
      },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: paraEl.closest("section") || paraEl,
          start: "top 80%",
          once: true,
        },
      }
    );

    // Add touch interaction for the image section
    const imageSection = document.querySelector('.bg-\\[url\\(\\\'/img/home/ThanitAugust_58\\.jpg\\\'\\)\\]');
    if (imageSection) {
      imageSection.addEventListener('touchstart', function() {
        this.style.transform = 'scale(1.02)';
        this.style.transition = 'transform 0.3s ease';
      });
      
      imageSection.addEventListener('touchend', function() {
        this.style.transform = 'scale(1)';
      });
    }
  });
</script>
