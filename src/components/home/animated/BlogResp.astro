<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("DOMContentLoaded", () => {
    const title = document.querySelector(".blog-title");
    const card1 = document.querySelector(".blog-card-1");
    const card2 = document.querySelector(".blog-card-2");
    const card3 = document.querySelector(".blog-card-3");

    if (!title || !card1 || !card2 || !card3) return;

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: title.closest("section") || title,
        start: "top 85%",
        once: true,
      },
    });

    // Title animation first
    tl.from(title, {
      opacity: 0,
      y: 20,
      duration: 0.6,
      ease: "power2.out",
    });

    // All cards animate at the same time
    tl.from(
      [card1, card2, card3],
      {
        opacity: 0,
        duration: 0.8,
        ease: "power2.out",
        stagger: 0, // no delay between cards
        x: (i) => (i === 0 ? -100 : i === 2 ? 100 : 0), // left for card 1, right for card 3
        y: (i) => (i === 1 ? 100 : 0), // bottom for card 2
      },
      "-=0.4"
    ); // overlap with title animation
  });
</script>
