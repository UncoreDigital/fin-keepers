<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("DOMContentLoaded", () => {
    const ctaEl = document.querySelector(".cta");
    if (!ctaEl) return;

    gsap.from(ctaEl, {
      opacity: 0,
      y: 50,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ctaEl,
        start: "top 50%",
        once: true,
      },
    });

    // Contact form submission - Handle both mobile and desktop forms
    const desktopForm = document.getElementById("contact-form-submit");
    const mobileForm = document.getElementById("contact-form-submit-mobile");
    const formMessage = document.getElementById("form-message");
    const thankYouMessageRight = document.getElementById("thank-you-message-right");
    const submitAnotherButtonRight = document.getElementById("submit-another-right");
    
    // Function to handle form submission
    function handleFormSubmit(form) {
      if (!form) return;
      
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = {
          name: formData.get("name"),
          email: formData.get("email"),
          message: formData.get("message"),
        };

        // Basic validation
        if (!data.name || !data.email || !data.message) {
          alert("Please fill in all required fields.");
          return;
        }

        // Show loading state
        const submitButton = form.querySelector("button[type='submit']");
        const originalText = submitButton?.textContent;
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.textContent = "Sending...";
        }

        // Simulate successful submission
        setTimeout(() => {
          alert("Thank you! Your message has been sent successfully.");
          form.reset();
          
          // Reset button state
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.textContent = originalText || "Talk to our Experts";
          }
        }, 1000);
      });
    }
    
    // Handle both forms
    handleFormSubmit(desktopForm);
    handleFormSubmit(mobileForm);
  });
</script>
