<div
  id="contact-section"
  class="main-container w-full min-h-[622px] z-[50] relative mx-auto my-0 px-4 py-10 lg:py-0 cta"
  id="contact-form"
>
  <div
    class="max-w-[1320px] mx-auto h-auto lg:h-[675px] bg-[#106253] rounded-[20px] lg:rounded-[30px] relative flex flex-col lg:flex-row items-center justify-between px-6 lg:px-12 py-8 lg:pt-12 lg:pb-8"
  >
    <!-- Left Side - Content and Illustration -->
    <div class="w-full lg:w-1/2 flex flex-col gap-0">
      <!-- Text Content -->
      <div id="left-content" class="flex flex-col gap-4 mt-[60px]">
        <h2 class="text-[28px] sm:text-[32px] md:text-[36px] lg:text-[42px] font-bold leading-tight text-white font-['Inter']">
          If You Are Ready To Trust Us, Let's Grow Together...
        </h2>
        <!-- Mobile Text -->
        <p class="block lg:hidden text-[16px] font-normal leading-relaxed text-white/90 font-['Inter']">
          Ready for stress-free bookkeeping and smarter financial decisions? Connect with your Finkeepers pod now.
        </p>
        
        <!-- Desktop Text -->
        <p class="hidden lg:block text-[18px] font-normal leading-relaxed text-white/90 font-['Inter']">
          Ready for stress-free bookkeeping and <br/>smarter financial decisions? Connect with <br/>your Finkeepers pod now.
        </p>
      </div>

      <!-- Illustration -->
      <div id="illustration" class="flex justify-center lg:justify-start mt-[60px]">
        <div class="w-full max-w-[480px] h-[300px] sm:h-[360px] lg:h-[420px] bg-[url('/src/assets/new_contact.png')] bg-contain bg-no-repeat bg-center">
        </div>
      </div>




    </div>

    <!-- Right Side - Form -->
    <div class="w-full lg:w-1/2 lg:pl-8 mt-8 lg:mt-0 flex justify-center">
      <div class="w-full max-w-[390px] mx-auto flex flex-col h-full">
        <!-- Form Container -->
        <div class="flex-1 flex flex-col justify-center">
          <form id="contact-form-submit" class="flex flex-col gap-6">
            <!-- Name -->
            <div class="relative w-full">
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-transparent border-b-2 border-white/30 text-white py-3 px-0 outline-none font-['Inter'] placeholder:text-white/60 focus:border-white transition-colors duration-300 text-left"
                placeholder="Name"
              />
            </div>
            
            <!-- Email -->
            <div class="relative w-full">
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-transparent border-b-2 border-white/30 text-white py-3 px-0 outline-none font-['Inter'] placeholder:text-white/60 focus:border-white transition-colors duration-300 text-left"
                placeholder="Email"
              />
            </div>
            
            <!-- Company Name -->
            <div class="relative w-full">
              <input
                type="text"
                id="company"
                name="company"
                class="w-full bg-transparent border-b-2 border-white/30 text-white py-3 px-0 outline-none font-['Inter'] placeholder:text-white/60 focus:border-white transition-colors duration-300 text-left"
                placeholder="Company Name"
              />
            </div>
            
            <!-- Message -->
            <div class="relative w-full">
              <textarea
                id="message"
                name="message"
                rows="3"
                required
                class="w-full bg-transparent border-b-2 border-white/30 text-white py-3 px-0 outline-none font-['Inter'] placeholder:text-white/60 focus:border-white transition-colors duration-300 resize-none text-left"
                placeholder="Message"
              ></textarea>
            </div>
            
            <!-- Submit Button -->
            <button
              type="submit"
              class="bg-[#ed7c00] text-white font-semibold text-[18px] font-['Inter'] rounded-[8px] py-[14px] px-[30px] w-full border border-transparent hover:bg-[#d66a00] transition-colors duration-300 mt-4"
            >
              Talk to our Experts
            </button>
            
            <div id="form-message" class="text-white text-sm font-['Inter'] hidden"></div>
          </form>
        </div>

        <!-- Thank You Message for Right Side -->
        <div
          id="thank-you-message-right"
          class="hidden flex-col gap-6 items-center text-center justify-center h-full"
        >
          <div class="flex items-center justify-center mb-4">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="flex flex-col gap-4">
            <h3 class="text-[32px] sm:text-[36px] lg:text-[40px] font-bold leading-tight text-white font-['Inter']">
              Thank you!
            </h3>
            <p class="text-[16px] lg:text-[18px] font-normal leading-relaxed text-white/90 font-['Inter'] max-w-[400px]">
              Your form has been successfully submitted.<br>
              Our team will get back to you shortly.
            </p>
          </div>
          <button
            id="submit-another-right"
            class="bg-[#ed7c00] text-white font-semibold text-[18px] font-['Inter'] rounded-[8px] py-[12px] px-[30px] border border-transparent hover:bg-transparent hover:border-white hover:text-white hover:cursor-pointer transition duration-300"
          >
            Submit Another Message
          </button>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("DOMContentLoaded", () => {
    const ctaEl = document.querySelector(".cta");
    if (!ctaEl) return;

    gsap.from(ctaEl, {
      opacity: 0,
      y: 50,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ctaEl,
        start: "top 50%",
        once: true,
      },
    });

    // Contact form submission
    const form = document.getElementById("contact-form-submit");
    const formMessage = document.getElementById("form-message");
    const thankYouMessageRight = document.getElementById("thank-you-message-right");
    const submitAnotherButtonRight = document.getElementById("submit-another-right");
    const leftContent = document.getElementById("left-content");
    const illustration = document.getElementById("illustration");
    
    if (form && thankYouMessageRight) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = {
          name: formData.get("name"),
          email: formData.get("email"),
          message: formData.get("message"),
        };

        // Basic validation
        if (!data.name || !data.email || !data.message) {
          formMessage.textContent = "Please fill in all required fields.";
          formMessage.classList.remove("hidden", "text-green-400");
          formMessage.classList.add("text-red-500");
          setTimeout(() => {
            formMessage.classList.add("hidden");
          }, 3000);
          return;
        }

        // Show loading state
        const submitButton = form.querySelector("button[type='submit']");
        const originalText = submitButton?.textContent;
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.textContent = "Sending...";
        }

        // Simulate successful submission
        setTimeout(() => {
          // Hide form
          form.style.display = 'none';
          
          // Show thank you message on right side
          thankYouMessageRight.classList.remove('hidden');
          thankYouMessageRight.classList.add('flex');
          
          // Reset button state
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.textContent = originalText || "Talk to our Experts";
          }
        }, 1000);
      });

      // Handle "Submit Another Message" button
      if (submitAnotherButtonRight) {
        submitAnotherButtonRight.addEventListener("click", () => {
          // Reset form
          form.reset();
          
          // Show form again
          form.style.display = '';
          
          // Hide thank you message
          thankYouMessageRight.classList.add('hidden');
          thankYouMessageRight.classList.remove('flex');
        });
      }
    }
  });
</script>
