<script>
  const plusIcon =
    "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2025-07-26/Qas8aih7UJ.png";
  const minusIcon =
    "https://codia-f2c.s3.us-west-1.amazonaws.com/image/2025-07-30/eKqRguy4MD.png";

  document.querySelectorAll("[data-accordion-toggle]").forEach((toggle) => {
    toggle.addEventListener("click", () => {
      const card = toggle.closest(".flex.flex-col");
      if (!card) return;

      const content = card.querySelector("[data-accordion-content]");
      const icon = toggle.querySelector("[data-icon]");

      if (!(content instanceof HTMLElement) || !(icon instanceof HTMLElement))
        return;

      const allContents = document.querySelectorAll<HTMLElement>(
        "[data-accordion-content]"
      );
      const allIcons = document.querySelectorAll<HTMLElement>("[data-icon]");
      const allBtns = document.querySelectorAll<HTMLElement>(
        "[data-accordion-toggle]"
      );

      const isOpen = !content.classList.contains("hidden");

      // Close all
      allContents.forEach((c) => c.classList.add("hidden"));
      allIcons.forEach((i) => (i.style.backgroundImage = `url('${plusIcon}')`));
      allBtns.forEach((b) => b.classList.remove("bg-[#ed7c00]"));

      // Open clicked one
      if (!isOpen) {
        content.classList.remove("hidden");
        icon.style.backgroundImage = `url('${minusIcon}')`;
        toggle.classList.add("bg-[#ed7c00]");
      }
    });
  });
</script>
