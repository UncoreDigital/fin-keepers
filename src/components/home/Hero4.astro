---

<div class="main-container w-full min-h-[544px] relative mx-auto my-0">
  <div class="w-full h-[570px] bg-[#213d3c] absolute top-0 left-0 overflow-hidden mb-0 lg:mb-2">
    <div class="flex w-[1440px] h-[870.759px] flex-col items-start flex-nowrap absolute top-1/2 left-0 translate-x-0 translate-y-[-49.96%]">
      <div class="w-[1440px] h-[818.759px] shrink-0 opacity-[0.08] relative">
        <div class="w-[1835.026px] h-[654.623px] relative z-[12] mt-[327.142px] ml-[-180.691px]">
          <!-- Background layers (local) -->
          {
            [Bg1, Bg2, Bg3, Bg4, Bg5, Bg6, Bg7, Bg8, Bg9, Bg10, Bg11, Bg12, Bg13, Bg14, Bg15, Bg16, Bg17, Bg18, Bg19, Bg20, Bg21, Bg22, Bg23, Bg24, Bg25, Bg26, Bg27, Bg28, Bg29, Bg30, Bg31].map((bg, i) => (
              <div class="absolute w-full h-full" style={`background: url(${bg.src}) no-repeat center / 100% 100%; z-index:${14 + i * 2};`}></div>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Centered content -->
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-2/3 lg:-translate-y-1/2 w-full max-w-[1314px] px-4 sm:px-6 md:px-10">
      <div class="flex flex-col lg:flex-row items-center lg:items-start justify-between w-full gap-8">
        <!-- Left text -->
        <div class="flex flex-col gap-3 items-start text-center lg:text-left lg:flex-1 max-w-[744px]">
          <div class="text-white font-bold text-[28px] sm:text-[36px] md:text-[44px] lg:text-[52px] leading-tight tracking-[-0.5px] lg:tracking-[-1.04px] z-[3]">
            Smarter <span>Accounting</span>.<br /> Stronger <span>Businesses.</span>
          </div>

          <p class="text-white text-sm sm:text-base md:text-lg leading-[1.6] max-w-[90%] lg:max-w-[546px] z-[4]">
            Expert U.S. based bookkeeping, payroll, and tax solutions<br class="hidden sm:block" />
            tailored for small businesses and startups - all at competitive<br class="hidden sm:block" />
            prices.
          </p>

          <div class="mt-6">
            <a href="#" class="flex w-[200px] sm:w-[286px] h-[44px] sm:h-[50px] justify-center items-center bg-[#ed7c00] rounded-[8px] border border-transparent hover:bg-transparent hover:border-white transition duration-300">
              <span class="text-[14px] sm:text-[18px] font-semibold text-white">Book your Consultation</span>
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="lg:flex-1 flex justify-end items-center hidden sm:block group relative w-[580px] sm:w-[680px] lg:w-[760px] aspect-[640/420]">
          <img src="/img/home/hero/1.png" alt="Hero Default" class="absolute inset-0 w-full h-full object-contain transition-opacity duration-700 ease-in-out opacity-100 group-hover:opacity-0 z-10" />
          <img src="/img/home/hero/2.png" alt="Hero Hover" class="absolute inset-0 w-full h-full object-contain transition-opacity duration-700 ease-in-out opacity-0 group-hover:opacity-100 z-10" />
        </div>
      </div>
    </div>
  </div>

  <!-- Trusted Partners -->
  <div class="flex w-full max-w-[1314px] px-4 sm:px-6 md:px-10 py-6 flex-col gap-[36px] items-start bg-white absolute top-[448px] left-1/2 -translate-x-1/2 overflow-hidden shadow-[0_4px_4px_0_rgba(0,0,0,0.25)] mt-10 rounded-xl">
    <span class="w-full text-center font-['Inter'] text-[16px] sm:text-[18px] font-semibold text-[#51506e] z-[81]">
      Trusted by 850+ Accounting Firms
    </span>

    <div class="relative w-full overflow-hidden z-[82]">
      <div id="logoSlider" class="flex gap-[40px] sm:gap-[66px] items-center w-max animate-scroll-logos">
        { logos.map((src, i) => (
          <img src={src} alt={`partner-${i}`} class="h-[48px] shrink-0 max-w-[180px] object-contain" key={i} />
        )) }
        {/* duplicate for continuous scroll */}
        { logos.map((src, i) => (
          <img src={src} alt={`partner-dup-${i}`} class="h-[48px] shrink-0 max-w-[180px] object-contain" key={'dup-'+i} />
        )) }
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes scroll-logos {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-scroll-logos {
    animation: scroll-logos 30s linear infinite;
  }
</style>
